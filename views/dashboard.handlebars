<section>
    <h2>Create New post</h2>

    <form action="" class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-url">Link</label>
            <input type="text" name="post-url" />
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{!-- we wrapped the entire section element in an {{#if}} helper so users wont see this if they have no posts--}}
{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>